<Window x:Class="Knjizara.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Knjizara.Windows"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource=" C:\Users\Mirza\Source\Repos\Knjizara\Knjizara\image\books.jpg" />
    </Window.Background>

    <StackPanel >
        <UniformGrid Columns="2" DockPanel.Dock="Bottom" Width="470"   >
            <Label Content=" Username:" FontSize=" 30" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin=" 10,5"/>
            <TextBox Name ="txtUsername" FontSize=" 30" Margin=" 10,5"/>
            <Label Content=" Password:" FontSize=" 30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin=" 10,5"/>
            <PasswordBox x:Name="txtPassword" FontSize=" 30" Margin=" 10,5"/>
            <Button Name="btnLogin"  Content=" Login" FontSize=" 30" Width="140" Margin=" 10,5" Click="btnLogin_Click"/>
            <Button  Content=" Exit" FontSize=" 30" Width="140" Margin=" 10,5" Click="Button_Click"/>
        </UniformGrid>
    </StackPanel>
</Window>
